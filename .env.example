# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000

# Frontend Configuration
VITE_API_URL=http://localhost:5000/api

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=grade_management_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# Marking System Constants
MAX_SCORE=20
MIN_SCORE=0
WARNING_THRESHOLD=12
CRITICAL_THRESHOLD=10

# Grade Boundaries (0-20 scale)
GRADE_A_MIN=18
GRADE_B_MIN=16
GRADE_C_MIN=14
GRADE_D_MIN=12

# Security
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=15m
SESSION_TIMEOUT=24h

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@grademanagement.com

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=text/csv,application/vnd.ms-excel

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Application
APP_NAME=Grade Management System
ADMIN_EMAIL=admin@grademanagement.com
SUPPORT_EMAIL=support@grademanagement.com
